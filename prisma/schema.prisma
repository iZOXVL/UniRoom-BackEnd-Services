generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Chat {
  id               String   @id @default(auto()) @map("_id") @db.ObjectId
  participants     String[] // Aquí mantienes los IDs para la validación
  participantDetails Json?  // Aquí almacenas los detalles adicionales
  status           String
  roomId           String
  roomDetails      Json?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
}


model Message {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  chatId    String   @db.ObjectId
  senderId  String
  content   String
  nickname  String
  timestamp DateTime @default(now())
  isRead    Boolean  @default(false)
}
